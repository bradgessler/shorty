%form{:method=>'post',:action=>'/'}
  %input{:type=>'hidden',:name=>'_method',:value=>'put'}
  ="http://#{@env['HTTP_HOST']}/"
  %input#key.faux{:type=>'text',:name=>'key',:value=>@url.key,:tabindex=>2,:size=>8}>
  &#10132;
  %input#url{:type=>'text',:name=>'url',:value=>@url.url,:tabindex=>1,:size=>35}
  :javascript
    $(document).ready(function(){
      var url = $('#url');
      url.focus();
    });
  %input{:type=>'submit',:value=>'Shorten',:tabindex=>3}
-unless @url.errors.empty?
  #errors
    Ru Roh!
    =succeed ('.') do
      =@url.errors.values.to_sentence.capitalize